<%- include("./partials/header") %>


<div class="container">
<h1 style="text-align: center; margin-top:5%;">Edit Portfolio</h1>

<div class="row-edit">
<div class="edit-container">
<form action="/users/view/<%=portfolio._id %>/?_method=PUT" method="POST">



<div class="inside-form edit-form">

<% for(var i=0; i<portfolio.portfol.length;i++){ %>

			

                    <div class="portfolio-edit">

                        <div class="form-group"><input class="form-control" type="text" name="cryptocurrency[<%=i%>][name]" value="<%=portfolio.portfol[i].name%>"></div>

                        <div class="form-group"><input class="form-control" type="text" name="cryptocurrency[<%=i%>][amount]" value="<%=portfolio.portfol[i].amount%>"></div>
                        <br>

                        <div class="form-group" style="display:none;">
                        <input class="form-control" name="cryptocurrency[<%=i%>][price]" value="<%=portfolio.portfol[i].price%>">
                        </div>
                    <br>

                    </div>		
		



	<% }%>

			
                        </div>



	<div class="form-group"><button class="btn btn-lg btn-block done-btn">Done!</button></div>
</form>

<a href="/users/view" class="go-back-link">Go Back!</a>

</div>


</div>
</div>



<%- include("./partials/footer") %>